<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".HistoryDisplayActivity" >
	
	    <TextView
	        android:id="@+id/history_box_top"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hello_world" />
	
	    <ImageView
	        android:id="@+id/history_image_first"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/history_box_top"
	        android:contentDescription="@string/image_content_description" />
	    
	    <TextView 
	        android:id="@+id/history_box_middle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/history_image_first"
	        android:text="@string/hello_world" />
	    
	    <ImageView 
	        android:id="@+id/history_image_second"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/history_box_middle"
	        android:contentDescription="@string/image_content_description"/>
	    
	    <TextView 
	        android:id="@+id/history_box_bottom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/history_image_second"
	        android:text="@string/hello_world"/>
	        
	        
	</RelativeLayout>
</ScrollView>